.cut { display: none; }
.cut:not(:checked) + label + * { display: none; } /* фактически нужна только одна строка */

/* вид CSS кнопки */
.cut:not(:checked) + label,
.cut:checked + label {
  display: inline-block;
  padding: 2px 10px;
  border-radius: 2px;
  color: #fff;
  background: #036443;
  cursor: pointer;
}
.cut:checked + label {
  background: #436443;
}



